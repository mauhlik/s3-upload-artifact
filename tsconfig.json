{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf",
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*", "./__tests__/**/*"],
  "exclude": ["./dist", "./node_modules", "./coverage"]
}
